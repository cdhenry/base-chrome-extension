{
    "name": "ReactJS Chrome Extension",
    "description": "Using ReactJS to build a Chrome Extension",
    "version": "0.1.0",
    "manifest_version": 2,
    "icons": {
        "16": "./timelapse-1x.png",
        "32": "./timelapse-2x.png",
        "48": "./timelapse-2x.png",
        "128": "./timelapse-2x.png"
    },
    "background": {
        "scripts": ["./background.ts"]
    },
    "options_page": "./options.html",
    "browser_action": {
        "default_popup": "popup.html"
    },
    "permissions": ["tabs", "<all_urls>"]
}
